<header>
  <div class="logo">
    <img src="/images/vision.png" alt="Vision Logo">
  </div>

  <input type="checkbox" id="menu-toggle">
  <label for="menu-toggle" class="menu-icon">☰</label>

  <nav class="menu">
    <a href="/" class="<%= title === 'Home' ? 'active' : '' %>">Home</a>
    <a href="/about" class="<%= title === 'About' ? 'active' : '' %>">About</a>
    <a href="/treatments" class="<%= title === 'Treatments' ? 'active' : '' %>">Treatment</a>
    <a href="/staff" class="<%= title === 'Staff' ? 'active' : '' %>">Staff</a>
    <a href="/contact" class="<%= title === 'Contact' ? 'active' : '' %>">Contact</a>

    <a href="/buy-now" class="btn-buy">Buy Now</a>

    <% if (!user) { %>
      <!-- ✅ Not logged in: go to Login -->
      <a href="/login" class="account-circle" title="Login / Register">
        <i class="fa-regular fa-user"></i>
      </a>
    <% } else { %>

      <% if (user.role === "admin") { %>
        <!-- ✅ Admin shortcut -->
        <a href="/admin" class="account-circle" title="Admin Panel">
          <i class="fa-solid fa-gear"></i>
        </a>
      <% } %>

      <!-- ✅ Logged in: Logout -->
      <a href="/logout" class="account-circle" title="Logout">
        <i class="fa-solid fa-right-from-bracket"></i>
      </a>

    <% } %>
  </nav>
</header>
