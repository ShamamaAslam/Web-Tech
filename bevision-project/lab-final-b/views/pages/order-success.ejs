<%- include("../layouts/main", {
  title: "Order Placed",
  pageCss: "order-success.css",
  body: `
    <div class="os-wrap">
      <div class="os-card">

        <div class="os-icon">✅</div>
        <h1>Order Placed Successfully!</h1>

        <p><strong>Order ID:</strong> ${order._id}</p>
        <p><strong>Status:</strong> ${order.status}</p>
        <p><strong>Total:</strong> Rs ${order.total}</p>

        <hr/>

        <div class="os-items">
          ${(order.items || []).map(i => `
            <div class="os-item">
              <img src="${i.image || "/images/placeholder.jpg"}" alt="">
              <div>
                <strong>${i.name}</strong>
                <p>Rs ${i.price} × ${i.qty}</p>
              </div>
              <span>Rs ${i.price * i.qty}</span>
            </div>
          `).join("")}
        </div>

        <div class="os-actions">
          <a class="os-btn" href="/purchase">Continue Shopping</a>
          <a class="os-btn ghost" href="/my-orders">My Orders</a>
        </div>

      </div>
    </div>
  `
}) %>
