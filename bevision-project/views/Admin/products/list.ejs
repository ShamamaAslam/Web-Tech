<%- include("../layouts/admin", {
  title,
  body: `
    <div class="page-head">
      <div>
        <h1>Products</h1>
        <p>View, edit and manage your items.</p>
      </div>
      <a class="btn primary" href="/admin/products/new">+ Add Product</a>
    </div>

    <div class="card">
      <div class="table-wrap">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Price</th>
              <th style="width:240px;">Actions</th>
            </tr>
          </thead>
          <tbody>
            ${
              items.map(p => `
                <tr>
                  <td>
                    <strong>${p.name}</strong>
                  </td>
                  <td><span class="badge">${p.category || "â€”"}</span></td>
                  <td><strong>${p.price}</strong></td>
                  <td>
                    <a class="btn sm" href="/admin/products/${p._id}/edit">Edit</a>

                    <form style="display:inline" method="POST"
                      action="/admin/products/${p._id}/delete"
                      onsubmit="return confirm('Delete this product?')">
                      <button class="btn danger sm" type="submit">Delete</button>
                    </form>
                  </td>
                </tr>
              `).join("")
            }
          </tbody>
        </table>
      </div>
    </div>
  `
}) %>
